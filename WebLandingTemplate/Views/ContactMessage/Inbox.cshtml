@model IEnumerable<WebLandingTemplate.Models.ContactMessageVM>

@{
    ViewBag.Title = "Inbox";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    @*<!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dashboard</title>
    <!-- Bootstrap-->
    <link href="lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!--Common Plugins CSS -->
    <link href="css/plugins/plugins.css" rel="stylesheet">
    <!--fonts-->
    <link href="lib/line-icons/line-icons.css" rel="stylesheet">
    <link href="lib/font-awesome/css/fontawesome-all.min.css" rel="stylesheet">
    <!--page styles-->
    <link href="lib/summernote/summernote-bs4.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">*@
</head>
<body>
    <div class="page-wrapper" id="page-wrapper">
       
        <!--compose email offcanvas-->
        <div class="offcanvas-wrapper" id="offcanvas-menu">
            <!--offcanvas-overlay--><div class="offcanvas-overlay"></div>
            <nav class="offcanvas-collapse offcanvas-menu" role="navigation">

                <div class="offcanvas-content flex full-height">
                    <div class="offcanvas-header pRelative bg-dark p-3">
                        Mensaje Nuevo
                        <button class="close" data-toggle="offcanvas">
                            <i class="icon-Close fs24"></i>
                        </button>
                    </div>
                    <div class="flex slim-scroll p-3">
                        <form method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="To">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Subject">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Cc">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Bcc">
                            </div>
                            <div class="form-group">
                                <!--summernote editor-->
                                <textarea class="form-control summernote-init"></textarea>
                                <!--/.summernote editor-->
                            </div>
                            <div class="text-right">
                                <button class="btn btn-primary btn-icon"><i class="fa fa-paper-plane"></i>Enviar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </nav>
        </div>
        <main class="content">
            <div class="page-content d-flex flex pl-0 pr-0">
                <div class="d-flex flex">
                    @*<aside class="sidebar sidebar-sm" id="mail-sidebar">
                        <div class="flex-column d-flex bg-white">
                            <div class="b-b navbar">
                                <form role="form">
                                    <button class="no-padding bg-trans border0 text-muted" type="button"><i class="fa fa-search"></i></button>
                                    <input class="form-control d-inline border0 shadow0" type="Search" placeholder="Search Emails" aria-label="Search">
                                </form>
                            </div>
                            <div class="flex slim-scroll">
                                <div class="p-3 text-center">
                                    <button data-toggle="offcanvas" data-target="#offcanvas-menu" class="btn btn-icon btn-danger offcanvas-toggler">
                                        <i class="far fa-edit"></i>  Nuevo Mensaje
                                    </button>
                                </div>
                                <ul class="nav pb-3 pt-3">
                                    <li class="nav-item">
                                        <a href="#" class="nav-link d-block active"><i class="fa fa-inbox mr-3"></i>Inbox <span class="d-inline-block ml-2 text-dark">(@Model.Count())</span></a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" class="nav-link d-block"><i class="fa fa-paper-plane mr-3"></i>Enviados </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </aside>*@<!--Inbox sidebar-->

                    <div class="flex d-flex bg-white b-l sidebar-body" id="chat-content">
                        <div class="d-flex flex flex-column">
                            <!--inbox layer white bar -->
                            <div class="navbar bg-white b-b">
                                <div class="d-flex">
                                    <div class="d-inline-flex h-md-down flex align-self-center">
                                        <div class="customUi-checkbox checkboxUi-primary checkbox-rounded  mr-3">
                                            <input class="check-allmail" type="checkbox" id="select-mail" name="agree">
                                            <label for="select-mail" class="mb-0 ">
                                                <span class="label-checkbox"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class=" mr-2 btn-group dropdown">
                                        <button type="button" data-toggle="dropdown" data-target="#mail-sidebar" class="btn btn-gradient-danger mr-1 h-md-up rounded btn-sm">
                                            <i class="fa fa-align-left"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-light text-secondary btn-sm">
                                            <i class="fa fa-sync"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-light text-secondary btn-sm">
                                            <i class="fa fa-trash-alt"></i>
                                        </button>
                                        @*<button data-toggle="dropdown" class="btn btn-outline-light dropdown-toggle text-secondary btn-sm"><i class="fa fa-ellipsis-v"></i></button>
                                        <div class="dropdown-menu dropdown-menu-left mt-10">
                                            <a href="#" class="dropdown-item">Archive</a>
                                            <a href="#" class="dropdown-item">Delete</a>
                                            <div class="dropdown-divider"></div>
                                            <a href="#" class="dropdown-item">Mark as Unread</a>
                                            <a href="#" class="dropdown-item">Mark as Spam</a>
                                            <a href="#" class="dropdown-item">Report Spam</a>
                                            <a href="#" class="dropdown-item">Block</a>
                                        </div>*@
                                    </div>
                                </div>
                                @*<div class="d-flex">
                                    <div class="btn-group dropdown">
                                        <span class="d-inline-flex align-self-center mr-3 h-md-down">
                                            1-25 of 493
                                        </span>
                                        <button type="button" class="btn btn-outline-light text-secondary btn-sm">
                                            <i class="fa fa-chevron-left"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-light text-secondary btn-sm">
                                            <i class="fa fa-chevron-right"></i>
                                        </button>
                                        <button data-toggle="dropdown" title="Settings" class="btn btn-outline-light text-secondary btn-sm dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                                        <div class="dropdown-menu dropdown-menu-right mt-10">
                                            <a href="#" class="dropdown-item">Archive</a>
                                            <a href="#" class="dropdown-item">Delete</a>
                                            <div class="dropdown-divider"></div>
                                            <a href="#" class="dropdown-item">Mark as Unread</a>
                                            <a href="#" class="dropdown-item">Mark as Spam</a>
                                            <a href="#" class="dropdown-item">Report Spam</a>
                                            <a href="#" class="dropdown-item">Block</a>
                                        </div>
                                    </div>
                                </div>*@
                            </div>
                            <div class="flex slim-scroll">
                                <table class="table table-hover table-mails mb-0">
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td valign="middle">
                                                    <div class="customUi-checkbox checkboxUi-primary checkbox-rounded">
                                                        <input type="checkbox" name="agree">
                                                        <label>
                                                            <span class="label-checkbox"></span>
                                                        </label>
                                                    </div>
                                                </td>
                                                <td class="text-center  h-md-down" width="40px;"> 
                                                    <p><i class="fa fa-hashtag"></i> @item.MessageId  </p>
                                                </td>
                                                <td>
                                                        @if (item.IsRead == true)
                                                        {
                                                            <a class="d-flex  flex avatar40 bg-teal-active text-primary-light justify-content-center align-items-center font600 radius100">
                                                                <i class="fa fa-envelope-open"></i>
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a class="d-flex  flex avatar40 text-white bg-danger justify-content-center align-items-center font600 radius100">
                                                                <i class="fa fa-envelope"></i>
                                                            </a>
                                                        }
                                                </td>
                                                <td>
                                                    <div class="float-right">
                                                        <span class="d-inline-block text-muted fs12">@item.ContactDate</span>
                                                    </div>
                                                    <a class="mb-mail-meta" href="@Url.Action("Details","ContactMessage", new { id = item.MessageId })" >
                                                        <div class="mail-title">@item.Subject</div>
                                                        <div class="mail-content">@item.Message</div>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!--chat content-->
                </div>
            </div>
        </main><!-- page content end-->
    </div><!-- app's main wrapper end -->
    <!-- Common plugins -->
    <script type="text/javascript" src="js/plugins/plugins.js"></script>
    <script type="text/javascript" src="js/appUi-custom.js"></script>
    <script type="text/javascript" src="lib/summernote/summernote-bs4.min.js"></script>
    <script type="text/javascript" src="js/plugins-custom/summernote-custom.js"></script>
    <script>
            $('.check-allmail').click(function () {
                if ($(this).is(':checked')) {
                    $('input:checkbox').attr('checked', true);
                } else {
                    $('input:checkbox').attr('checked', false);
                }
            });
    </script>
</body>
</html>
