@model List<WebLandingTemplate.Models.ImageSrcVM>

<div class="modal-body form-control-file">
    <div class="row-fluid form-group col-md-12">

        <div class="row">
            <div class="portlet-box portlet-gutter ui-buttons-col mb-30">
                <div class="portlet-header flex-row flex d-flex align-items-center b-b">
                    <div class="flex d-flex flex-column">
                        <h3>@ViewBag.ModalName</h3>
                    </div>
                </div>
                <div class="portlet-body">
                    <form method="post" action="@Url.Action("" + ViewBag.GoTo + "", "FrontDashboard")" enctype="multipart/form-data" id="supplier-form">
                    @if (ViewBag.GoTo == "Create")
                    {
                    <div class="form-body">
                        <div class="form-row">
                            @Html.HiddenFor(model => model[0].ImageId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.EditorFor(model => model[0].ItemId, new { htmlAttributes = new { @class = "form-control", @id = "ItemId" } })
                            @Html.EditorFor(model => model[0].ItemCodeType, new { htmlAttributes = new { @class = "form-control", @id = "ItemCodeType" } })
                            <div class="col-md-5 mb-3">
                                <div class="input-icon-group">
                                    @Html.LabelFor(model => model[0].Description, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="input-icon-append">
                                        <i class="fa fa-user"></i>
                                        @Html.EditorFor(model => model[0].Description, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model[0].Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-8 mb-3">
                                <div class="input-icon-group">
                                    @Html.LabelFor(model => model[0].ItemCodeType, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="custom-file">
                                       @Html.DropDownList("filterType", ViewBag.typesrc as SelectList, new { id = "FilterNumber", @class = "FilterNumber form-control form-control-sm" })
                                        @Html.ValidationMessageFor(model => model[0].ItemCodeType, "", new { @class = "text-danger"})
                                    </div>
                                </div>

                                <div class="col-md-8 mb-3">
                                    <div class="input-icon-group">
                                        @Html.LabelFor(model => model[0].ItemCodeType, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="custom-file">
                                            @Html.DropDownList("Elemnto", ViewBag.Elements as SelectList, new { id = "Elementr", @class = "Elementr form-control form-control-sm" })
                                            @Html.ValidationMessageFor(model => model[0].ItemId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                  </div>

                                </div>
                            <div class="col-md-8 mb-3">
                                <div class="input-icon-group">
                                    @Html.LabelFor(model => model[0].Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="custom-file">
                                        <input type="file" name="imageUpload" id="file" onchange="return fileValidation()" class="form-control w">
                                        @Html.ValidationMessageFor(model => model[0].Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                        </div><!--row-->

                        <div class="result"></div><!-- end .result  section -->
                    </div><!-- end .form-body section -->
                    }
                        @if (ViewBag.GoTo == "Edit")
                        {
                            for (int i = 0; i < Model.Count; i++)
                            {

                                <div class="form-body">
                                    <div class="form-row">
                                        @Html.HiddenFor(model => model[i].ImageId, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.HiddenFor(model => model[i].Name, new { htmlAttributes = new { @class = "form-control" } })

                                        @Html.HiddenFor(model => model[i].ItemId, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.HiddenFor(model => model[i].ItemCodeType, new { htmlAttributes = new { @class = "form-control" } })

                                        <div class="col-md-5 mb-3">
                                            <div class="input-icon-group">
                                                @Html.LabelFor(model => model[i].Description, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="input-icon-append">
                                                    <i class="fa fa-user"></i>
                                                    @Html.EditorFor(model => model[i].Description, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model[i].Description, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>


                                        <!--Aqui abajo va el código-->
                                        <div class="col-md-5 mb-3">
                                            <div class="input-icon-group">
                                                @Html.LabelFor(model => model[i].Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="input-icon-append">
                                                    <img width="100" height="100" src="@Url.Action("getImage","FrontDashboard", new { id = Model[i].ImageId})" />
                                                    <input type="file" name="imageLoad+@i" id="file+@i" onchange="return fileValidation()">
                                                    @Html.ValidationMessageFor(model => model[i].Name, "", new { @class = "text-danger" })

                                                </div>
                                            </div>
                                        </div>
                                    </div><!--row-->
                                    <div class="result"></div><!-- end .result  section -->
                                </div>
                            }
                        }
                        @if (ViewBag.GoTo != "Details")
                        {
                            <div class="form-footer">
                                <div class="float-left">
                                    <button type="submit" data-btntext-sending="Sending..." class="button btn btn-primary"><span><i class="fa fa-paper-plane" aria-hidden="true"></i> </span>Enviar</button>
                                </div>
                            </div><!-- end .form-footer section -->
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="modal-footer">
            <button type="button" id="CancelModal" class="button btn-danger rounded" data-dismiss="modal"><span><i class="fa fa-window-close" aria-hidden="true"></i> </span>Cerrar</button>
        </div>
    </div>


</div>




