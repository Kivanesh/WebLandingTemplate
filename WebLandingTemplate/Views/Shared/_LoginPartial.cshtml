@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

<ul class='list-inline mb0 links'>
    <li class='list-inline-item'>
        @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>
    <li class='list-inline-item'><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
    <li class='list-inline-item'>@Html.ActionLink("Dashboard", "Index", "Admin", routeValues: null, htmlAttributes: new {})</li>
</ul>
    }
}
else
{
    <ul class='list-inline mb0 links'>
       <li class='list-inline-item'>@Html.ActionLink("Registrarse", "Register", "Account", routeValues:null , htmlAttributes: new { id = "registerLink" })</li>
       <li class='list-inline-item'>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: new { returnUrl = "/Admin/Index" }, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

